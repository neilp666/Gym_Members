
<div class="well col-xs-8 col-xs-offset-2">
  <% if @activity.member %>
    <ul class="listing">
      <div class="row center">
        <div class="col-md-4 col-md-offset-4">
          <li><h2>Created by:</h2></li>
          <li><h2><%= link_to gravatar_for(@activity.member), member_path(@activity.member)
          %></h2></li>
          <li class="member-title"><h2>
            <%= link_to @activity.member.username, member_path(@activity.member)  %></h2>
          </li>
        </div>
      </div>
    </ul>
    <% end %>



  <hr>
  <h3><%= simple_format(@activity.bio) %></h3>
  <% if @activity.categories.any? %>
    <h3>My Activities: <%= render @activity.categories %></h3>
  <% end %>
  <div class="activity-actions">
      <% if logged_in? && (current_member == @activity.member || current_member.admin?) %>
          <%= link_to "Edit this activity", edit_activity_path(@activity), class: "btn btn-primary" %>
          <%= link_to "Delete this article", activity_path(@activity), method: :delete, data: { confirm: "Are you sure , you want to delete the activity?" }, class: "btn btn-danger" %>
      <% end %>
      <%= link_to "view all activites listing", activities_path, class: "btn btn-success" %>
  </div>
</div>
