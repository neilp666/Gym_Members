<%= render 'shared/errors', obj: @activity %>

  <div class="row">
    <div class="col-xs-12">
      <%= form_for(@activity, :html => {class: "form-horizontal", role: "form"}) do |f| %>
       <div class="form-group">
         <div class="control-label col-sm-4">
            <%= f.label :location %><br>
        </div>
        <div class="col-sm-3">
         <%= f.text_field :location, class: "form-control", placeholder: "Your Location e.g Manchester", autofocus: true  %>
        </div>
      </div>
        <div class="form-group">
         <div class="control-label col-sm-4">
            <%= f.label :bio %>
         </div>
         <div class="col-sm-4">
          <%= f.text_area :bio, rows: 3,  class: "form-control", placeholder: "Add you bio" %>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-sm-offset-4 col-sm-8">
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
              <% end %>
          </div>
        </div>
      </div>



      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>

    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
    [<%= link_to "Cancel request and return to the activites listing", activities_path %>]
    </div>
  </div>

